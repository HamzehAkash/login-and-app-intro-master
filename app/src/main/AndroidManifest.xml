<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.alcode.com.login">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TheApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.transparent">
        <activity
            android:name=".RegisrationActivity.RegistrationActivity"
            android:label="@string/registration_activity_label"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SlidesActivities.AppIntroActivity.AppTutorial"
            android:label=""
            android:theme="@style/AppTheme.transparent"></activity>
        <activity
            android:name=".SlidesActivities.DeveloperActivity.TechnologyUsed"
            android:label=""
            android:theme="@style/AppTheme.transparent"></activity>
        <activity
            android:name=".AddPostAvtivity.AddPostAvtivity"
            android:label="@string/title_activity_add_post_avtivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
